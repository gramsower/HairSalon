@{
  Layout = "_Layout";
}

@using HairSalon.Models;
<div>
  <h1>Client</h1>

  @if (@Model.Count == 0)
  {
    <h3>No clients have been added yet!</h3>
  }

    <ul>
      @foreach (Client client in Model)
      {
        <li>@Html.ActionLink($"{client.ClientName}", "Details", new { id = client.ClientId })</li>
      }
    </ul>
</div>

<ul class="navbar">
  <li class="navbar">@Html.ActionLink("Add Client", "Create")</li>
  <li class="navbar">@Html.ActionLink("Home", "Index", "Home")</li>
  <li class="navbar">@Html.ActionLink("Clients", "Index", "Clients")</li>
  <li class="navbar">@Html.ActionLink("Stylists", "Index", "Stylists")</li>
</ul>