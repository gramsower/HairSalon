@{
  Layout = "_Layout";
}

@model HairSalon.Models.Stylist

<h2>Edit</h2>

<h4>Edit this Stylist: @Html.DisplayFor(model => model.StylistName)</h4>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.StylistId)

  @Html.LabelFor(model => model.StylistName, new {@class = "labelcolor"})
  @Html.EditorFor(model => model.StylistName)

  <input type="submit" value="Save" />
}
<p>@Html.ActionLink("Back to Stylist List", "Index")</p>