@{
  Layout = "_Layout";
}

@using HairSalon.Models;

<div>
  <h1>Stylists</h1>
  
  @if(@Model.Count == 0)
  {
    <h3>No Stylists have been added yet!</h3>
  }

  <ul>
    @foreach(Stylist stylist in Model)
    {
      <li>@Html.ActionLink($"{stylist.StylistName}", "Details", new { id = stylist.StylistId })</li>
    }
  </ul>
</div>

<ul class="navbar">
  <li class="navbar">@Html.ActionLink("Add Stylist", "Create")</li>
  <li class="navbar">@Html.ActionLink("Add Client", "Create", "Clients")</li>
  <li class="navbar">@Html.ActionLink("Home", "Index", "Home")</li>
  <li class="navbar">@Html.ActionLink("Clients", "Index", "Clients")</li>
  <li class="navbar">@Html.ActionLink("Stylists", "Index", "Stylists")</li>
</ul>